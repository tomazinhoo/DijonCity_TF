<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thomas.dijoncity.Activities.HomeActivity"
    android:padding="10dp" >

    <Button
        android:id="@+id/buttonMyTrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mes parcours" />

    <Button
        android:id="@+id/buttonMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMyTrips"
        android:text="Afficher la carte" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMap" />

    <ListView
        android:id="@+id/listViewPois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle" />
</RelativeLayout>
